{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "strictNullChecks": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "outDir": "./scripts",
    "moduleResolution": "Node",
    "allowArbitraryExtensions": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
